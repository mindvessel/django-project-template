{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Django Shell",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["manage.py", "shell_plus"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Upgrade Requirements",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["manage.py", "pipsync", "--upgrade"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
